#include<stdio.h>
#include<string.h>
char sort_str(char str[],int n); // 字符串排序函数
char mul_largNum(char str[],int n); // 特大数计算函数
int main()
{
    char str1[21],str2[21],str3[21];//用字符串存储特大数
    int n;
    scanf("%s",str1);
    n=strlen(str1);
    strcpy(str2,str1);
	sort_str(str1,n);
    if(mul_largNum(str2,n)=='T')    //判断该数乘2后是否越位并且计算数据乘2的结果 
        {
        	strcpy(str3,str2);  //用str3保留数据乘2的结果
        	sort_str(str2,n);   //排序str2 
			if(strcmp(str1,str2)==0) //判断该数是否由原数字组成
	            printf("Yes\n%s",str3);
	        else
	        	printf("No");	
		} 
    else
        printf("No\n1%s",str2);
	
}
char sort_str(char str[],int n) // 字符串排序函数
{
    int i,j,k;
    char c;
    for(i=0;i<n;i++)
    {
    	k=1;
        for(j=0;j<n-1;j++)
        { 
            if(str[j]>str[j+1])
            {
                c=str[j];
                str[j]=str[j+1];
                str[j+1]=c;
                k=0;
            }
        }
        if(k)
        	break;
    }
}
char mul_largNum(char str[],int n) // 特大数计算函数
{
	int i;
	int b,jin=0;
	for(i=n-1;i>=0;i--)
	{
		b=str[i]+str[i]-96+jin;
		if(b<10)
		{
			str[i]=b+48;
			jin=0;
		}
		else
		{
			str[i]=b+48-10;
			jin=1;
		}
	}
	if(jin)
	 return 'F';
	else
	return 'T'	 ;
} 
